<div class="article">

  <h2><%= @article.title %></h2>
  <p><%= @article.content %><p>
</div>

<div class="comment-box">
  <h3>Comments</h3>

  <% @comments.each do |comment| %>
    <div class="comment">
	  	<p>User name:<p>
	  	<p><%= comment.content %></p>
	  </div>
  <% end %>

  <div class="form-comment">
	  <% if session[:current_user] %>
	  	<h4>Join the conversation:</h4>
	  	<form id="new-comment" action="/comment/new/<%= @article.id %>" method="post">
		  	<textarea name="content" cols="30" rows="5">
		  	</textarea>
		  	<input type="submit" value="Submit">
		  </form>
	  <% end %>
  <div>

</div>